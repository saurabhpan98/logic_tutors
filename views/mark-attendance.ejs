    <script crossorigin src="https://unpkg.com/react@16/umd/react.development.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@16/umd/react-dom.development.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>

    <style media="screen">
      nav li{
        padding: 10px 20px;
      }

      nav{
        border-bottom: solid 0.2px lightgrey;
      }

      form{
        width: 50%;
        margin: 10px auto;
        box-shadow: 0 0 20px lightgrey;
        padding: 40px;
        border-radius: 6px;
      }

      #attendanceButton{
        border-radius: 4px;
        background: #09BF2D;
        border: solid 2px #09BF2D;
        outline: none;
        color: white;
        padding: 5px 7px;
        font-family: Calibri;
      }

      #attendanceButton:hover{
        border: solid 2px #07B028;
        background: #07B028;
        transition: all 0.3s;
      }

      @media only screen and (max-width: 700px){
        form{
          width: 100%;
        }
      }

      /* sidenav CSS -----------*/
      .sidenav {
        height: 100%;
        width: 0;
        position: fixed;
        z-index: 1;
        top: 0;
        /*left: 0;*/
        right: 0;
        background-color: #111;
        overflow-x: hidden;
        transition: 0.5s;
        padding-top: 60px;
        font-family: Basic, sans-serif;
      }

      .sidenav a {
        padding: 8px 8px 8px 32px;
        text-decoration: none;
        font-size: 23px;
        color: #818181;
        display: block;
        transition: 0.3s;
      }

      .sidenav a:hover {
        color: #f1f1f1;
      }

      .sidenav .closebtn {
        position: absolute;
        top: 0;
        right: 25px;
        font-size: 36px;
        margin-left: 50px;
      }

      @media screen and (max-height: 450px) {
        .sidenav {padding-top: 15px;}
        .sidenav a {font-size: 18px;}
      }
      /* ---------------sidenav CSS ends --------*/

    </style>
</head>

<body class="text-center" style="color: rgb(0,0,0);">
    <nav class="navbar navbar-light navbar-expand-xl text-center navigation-clean" style="font-family: Basic, sans-serif;">
        <div class="container">
          <a class="navbar-brand" href="/faculty-profile" style="font-size: 30px;"><%= user.name %></a>
          <div class="" id="navcol-1">
            <ul class="nav navbar-nav ml-auto">
              <li class="nav-item" role="presentation">
                <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776;</span>
              </li>
            </ul>
          </div>
      </div>
    </nav>

    <div id="mySidenav" class="sidenav">
      <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
      <a class="nav-link" href="/">Home</a>
      <a class="nav-link" href="#">Doubt Session</a>
      <a class="nav-link active" href="/faculty-profile">Classroom</a>
      <a class="nav-link" href="/mark-attendance" style="color: white;">Attendance</a>
      <a class="nav-link" href="/enter-questions">Enter Questions</a>
      <a class="nav-link" href="#">Assignments</a>
      <% if(user.status == 'Faculty' && user.email == 'srbhpanchal98@gmail.com'){ %>
        <a href="/contact-messages" style="text-decoration: none;">Contact Messages</a>
      <% } %>
      <a class="nav-link" href="/myMessages">Messages</a>
      <a class="nav-link" href="/logout">Logout</a>
    </div>

    <div class="container" id="attendance_block" style="margin-top: 60px; padding: 30px;">
      <form method = "POST" action = "/mark-attendance" style="text-align: left;">
        <h1 style="text-align: left; font-family: Calibri; margin-bottom: 40px;">Want to mark attendance?</h1>
        <label for="class" style="font-family: Calibri;">Select the class for attendance..</label>
        <select class="form-control" style="margin-top: 16px; font-family: 'Open Sans', sans-serif;" name="class" required/>
          <option value="" selected="">Your Present Class</option>
          <option value="8">8</option>
          <option value="9">9</option>
          <option value="10">10</option>
          <option value="11">11</option>
          <option value="12">12</option>
        </select>

        <br>
        <button type="submit" id="attendanceButton">Select Class</button>
      </form>
    </div>

    <div class="container" id="attendance_block" style="margin: 60px auto; padding: 30px;">
      <form method = "POST" action = "" style="text-align: left;">
        <h1 style="text-align: left; font-family: Calibri;">Want to see attendance?</h1>
        <label for="class"></label>
        <select class="form-control" style="margin-top: 16px; font-family: 'Open Sans', sans-serif;" name="class" required/>
          <option value="" selected="">Your Present Class</option>
          <option value="8">8</option>
          <option value="9">9</option>
          <option value="10">10</option>
          <option value="11">11</option>
          <option value="12">12</option>
        </select>

        <br>
        <div class="form-group">
          <label for="hire_date" style="font-family: Calibri;">Date</label>
          <input class="form-control" type="date" id="hire_date" name="hire_date" style = "font-family: Calibri;">
        </div>

        <br>
        <button type="submit" id="attendanceButton">Select Class</button>
      </form>
    </div>

    <script>
      //nav script
      function openNav() {
        document.getElementById("mySidenav").style.width = "300px";
      }

      function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
      }
    </script>

    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="assets/js/bs-animation.js"></script>
    <script src="assets/js/clean-blog.js"></script>
  </body>

</html>

    <div class="login-clean" style="background-color: rgba(241,247,252,0);" id="signin_form">
      <form class="shadow-lg" method="POST" action="/signin" onsubmit="validateFunc()">
          <h2 class="sr-only">Login Form</h2>
          <div class="illustration">
            <i class="icon ion-ios-navigate" style="color: rgb(71,119,244);"></i>
          </div>

          <p class="lead" id="incorrect-message"></p>
          <div class="form-group">
            <input class="form-control" id = "email" type="username" name="username" placeholder="Email/Username" style="font-family: 'Open Sans', sans-serif;" required/>
          </div>
          <div class="form-group">
            <input class="form-control" id = "password" type="password" name="password" placeholder="Password" style="font-family: 'Open Sans', sans-serif;" required/>
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit" style="font-family: 'Open Sans', sans-serif;background-color: rgb(71,119,244);">Log In</button>
          </div>
          <a href="#" class="forgot" style="font-family: 'Open Sans', sans-serif;">Forgot your email or password?</a>
      </form>
    </div>


    <script type="text/javascript">
      var email = document.getElementById('email');
      var password = document.getElementById('password');
      var message = document.getElementById('incorrect-message');
      var allUsers = <%- JSON.stringify(allUsers) %> ;

      function validateFunc(){
        var check = false;
        for(var i = 0; i<allUsers.length; i++){
          if(email.value == allUsers[i].email){
            if(password.value == allUsers[i].password){
              check = true;
              break;
            }
            else{
              check = false;
              break;
            }
          }
        }

        if(check == false){
          event.preventDefault();
          message.innerHTML = "Email / Password not correct";

          message.style.fontSize = "15px";
          message.style.fontFamily = "Calibri";
          message.style.color = "red";
        }
      }
    </script>

